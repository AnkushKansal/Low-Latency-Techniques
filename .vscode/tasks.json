{
    "tasks": [
        {
            "label": "C/C++: Debug mode build",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-Wno-unused-variable",
                "-Wno-unused-function",
                //"-Wno-unused-but-set-variable",
                //"-Wno-missing-field-initializers",
                "-fsanitize=address",
                "-fsanitize=undefined",
                "-std=c++20",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/debug/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Prepare release dir",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "${workspaceFolder}/release/bin"
            ],
            "problemMatcher": []
        },
        {
            "label": "C/C++: (Release) mode Build ",
            "dependsOn": "Prepare release dir",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++20",
                "-O3",
                "-DNDEBUG",
                "${file}",
                "-o",
                "${workspaceFolder}/release/bin/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Release build task"
        }
    ],
    "version": "2.0.0"
}